{
	"languageserver": {
		"clangd": {
			"command": "clangd-10",
			"rootPatterns": [
				"compile_flags.txt",
				"compile_commands.json",
				".vim/",
				".git/",
				".hg/"
			],
			"args": [
				"--clang-tidy",
				"--header-insertion=iwyu",
				"--background-index",
				"--suggest-missing-includes"
			],
			"filetypes": [
				"c",
				"cpp",
				"objc",
				"objcpp",
				"cu"
			]
		},
		"lua": {
			"command": "lua-lsp",
			"filetypes": [
				"lua"
			]
		}
	},
	"java.errors.incompleteClasspath.severity": "ignore"
}
